<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Make sure all your font definitions inherit from the definitions
        in the typeface.xml style definition xml.
    -->

    <style name="TextAppearanceLarge" parent="@style/TypefaceLarge">
        <item name="android:textSize">@dimen/text_size_large</item>
    </style>

    <style name="TextAppearanceMedium" parent="@style/TypefaceMedium">
        <item name="android:textSize">@dimen/text_size_medium</item>
    </style>

    <style name="TextAppearanceSmall" parent="@style/TypefaceSmall">
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>

    <style name="TextAppearanceMicro" parent="@style/TypefaceSmall">
        <item name="android:textSize">@dimen/text_size_micro</item>
    </style>

</resources>