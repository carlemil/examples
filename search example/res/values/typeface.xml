<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        These values will be replaced in the delivery process to contain the
        Sony Mobile SST fonts.

        NOTE! Make sure you reflect any changes to this file in the corresponding
        ${proj_root}/sony-select-client-delivery/overlay/res/values/typeface.xml file.
    -->
    <style name="TypefaceTheme" parent="@android:style/Theme.DeviceDefault">
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:actionBarStyle">@style/ActionBar</item>
        <item name="android:typeface">normal</item>
    </style>

    <style name="TypefaceLarge" parent="@android:style/TextAppearance.DeviceDefault.Large">
        <item name="android:typeface">normal</item>
    </style>

    <style name="TypefaceMedium" parent="@android:style/TextAppearance.DeviceDefault.Medium">
        <item name="android:typeface">normal</item>
    </style>

    <style name="TypefaceSmall" parent="@android:style/TextAppearance.DeviceDefault.Small">
        <item name="android:typeface">normal</item>
    </style>

    <style name="ActionBar" parent="@android:Widget.DeviceDefault.ActionBar">
        <item name="android:background">@drawable/actionbar_background</item>
    </style>
</resources>