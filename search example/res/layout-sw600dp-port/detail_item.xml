<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:select="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <com.sonymobile.sonyselect.components.RelativeHeightImageView
        android:id="@id/image"
        android:layout_width="@dimen/promo_image_width_hint"
        android:layout_height="0dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="30dp"
        select:layout_weightHeight="1"
        select:layout_weightWidth="1"
        android:alpha="0.0"
        android:contentDescription="@null"
        android:cropToPadding="true"
        android:paddingBottom="@dimen/detail_image_padding_bottom"
        android:paddingLeft="@dimen/detail_image_padding_left"
        android:paddingRight="@dimen/detail_image_padding_right"
        android:paddingTop="@dimen/detail_image_padding_top"
        android:scaleType="centerCrop"
        android:src="@drawable/image_placeholder" />

    <View
        android:id="@+id/effect"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_alignBottom="@id/image"
        android:layout_alignLeft="@id/image"
        android:layout_alignRight="@id/image"
        android:layout_alignTop="@id/image"
        android:background="@drawable/profile_effect" />

    <LinearLayout
        android:id="@+id/body"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_alignBottom="@id/image"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/image"
        android:layout_toRightOf="@id/image"
        android:alpha="0.0"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingRight="30dp" >

        <include layout="@layout/detail_item_plate" />
    </LinearLayout>
</RelativeLayout>