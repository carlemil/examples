<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:select="http://schemas.android.com/apk/res-auto"
    android:id="@+id/featured_item"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="12dp"
    android:paddingTop="5dp" >

    <com.sonymobile.sonyselect.components.RelativeHeightImageView
        android:id="@id/image"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_centerInParent="true"
        select:layout_weightHeight="1"
        select:layout_weightWidth="1"
        android:contentDescription="@null"
        android:scaleType="centerCrop"
        android:src="@drawable/image_placeholder" />

    <View
        android:id="@id/plate"
        android:layout_width="0dp"
        android:layout_height="@dimen/promo_plate_height"
        android:layout_alignBottom="@id/image"
        android:layout_alignLeft="@id/image"
        android:layout_alignRight="@id/image"
        android:background="@drawable/feature_backplate" />

    <View
        android:id="@id/color"
        android:layout_width="@dimen/promo_plate_color_width"
        android:layout_height="0dp"
        android:layout_alignBottom="@id/plate"
        android:layout_alignLeft="@id/plate"
        android:layout_alignTop="@id/plate"
        android:layout_margin="9dp"
        android:background="@drawable/color_bar" />

    <TextView
        android:id="@id/title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/plate"
        android:layout_alignTop="@id/plate"
        android:layout_marginRight="9dp"
        android:layout_marginTop="9dp"
        android:layout_toRightOf="@id/color"
        android:ellipsize="marquee"
        android:gravity="left|center_vertical"
        android:marqueeRepeatLimit="marquee_forever"
        android:singleLine="true"
        android:textAppearance="@style/TextAppearanceMedium"
        android:textIsSelectable="false" />

    <TextView
        android:id="@id/genre"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/plate"
        android:layout_alignRight="@id/plate"
        android:layout_marginBottom="9dp"
        android:layout_marginRight="9dp"
        android:layout_toRightOf="@id/color"
        android:ellipsize="marquee"
        android:gravity="left|center_vertical"
        android:marqueeRepeatLimit="marquee_forever"
        android:singleLine="true"
        android:textAppearance="@style/TextAppearanceMicro"
        android:textIsSelectable="false" />

</RelativeLayout>