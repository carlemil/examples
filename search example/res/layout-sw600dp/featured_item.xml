<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:select="http://schemas.android.com/apk/res-auto"
    android:id="@+id/featured_item"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <com.sonymobile.sonyselect.components.RelativeHeightImageView
        android:id="@id/image"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        select:layout_weightHeight="9"
        select:layout_weightWidth="16"
        android:contentDescription="@null"
        android:cropToPadding="true"
        android:padding="@dimen/image_effect_padding"
        android:scaleType="centerCrop"
        android:src="@drawable/image_placeholder" />

    <View
        android:id="@+id/effect"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_alignBottom="@id/image"
        android:layout_alignLeft="@id/image"
        android:layout_alignRight="@id/image"
        android:layout_alignTop="@id/image"
        android:background="@drawable/profile_effect" />

    <View
        android:id="@id/plate"
        android:layout_width="0dp"
        android:layout_height="@dimen/promo_plate_height"
        android:layout_alignBottom="@id/image"
        android:layout_alignLeft="@id/image"
        android:layout_alignRight="@id/image"
        android:layout_marginBottom="@dimen/image_effect_padding"
        android:layout_marginLeft="@dimen/image_effect_padding"
        android:layout_marginRight="@dimen/image_effect_padding"
        android:background="@drawable/feature_backplate" />

    <View
        android:id="@id/color"
        android:layout_width="@dimen/promo_plate_color_width"
        android:layout_height="0dp"
        android:layout_alignBottom="@id/plate"
        android:layout_alignLeft="@id/plate"
        android:layout_alignTop="@id/plate"
        android:layout_margin="9dp"
        android:background="@drawable/color_bar" />

    <TextView
        android:id="@id/title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/plate"
        android:layout_alignTop="@id/plate"
        android:layout_marginRight="9dp"
        android:layout_marginTop="9dp"
        android:layout_toRightOf="@id/color"
        android:ellipsize="end"
        android:gravity="left|center_vertical"
        android:maxLines="1"
        android:textAppearance="@style/TextAppearanceLarge"
        android:textIsSelectable="false" />

    <TextView
        android:id="@id/genre"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/plate"
        android:layout_alignRight="@id/plate"
        android:layout_marginBottom="9dp"
        android:layout_marginRight="9dp"
        android:layout_toRightOf="@id/color"
        android:ellipsize="end"
        android:gravity="left|center_vertical"
        android:maxLines="1"
        android:textAppearance="@style/TextAppearanceMicro"
        android:textIsSelectable="false" />

    <TextView
        android:id="@id/description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/plate"
        android:layout_alignRight="@id/plate"
        android:layout_below="@id/plate"
        android:layout_marginTop="@dimen/default_margin_horizontal"
        android:ellipsize="end"
        android:maxLines="1"
        android:textAppearance="@style/TextAppearanceMicro"
        android:textIsSelectable="false"
        android:visibility="gone" />

</RelativeLayout>